[user]
	name = Anirudh Sundar
  useConfigOnly = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
  st = status -sb
  br = branch -vv
  ci = commit -v
  ca = commit --amend -v
  co = checkout
  di = diff
  dis = diff --stat
  save = commit -am "Save"
	d = difftool
	tr = log --oneline --graph --decorate --all
  pu = push origin master
	pullrb = pull --rebase
	count = diff --stat "4b825dc642cb6eb9a060e54bf8d69288fbee4904" # hash of empty tree
  grc = grep -C 1
	patch = !git --no-pager diff --no-color
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	whitespace = cr-at-eol
	pager = diff-so-fancy | less --tabs=4 -RFX
	editor = vim
[pull]
	ff = only
[grep]
  lineNumber = true
[push]
	default = simple
